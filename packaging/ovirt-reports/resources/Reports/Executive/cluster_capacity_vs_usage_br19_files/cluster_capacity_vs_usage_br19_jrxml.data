	<queryString language="SQL">
		<![CDATA[-- This query will return the total number of Hosts CPU Cores vs. the number of total CPU Cores allocated to the VMs
-- and the total Physical Memory of the  Hosts vs. the total Physical Memory allocated to the VMs

-- The query has 2 parts. One is to get hosts data and the other is to get the vms data.
-- For each part of the query there are 2 INNER JOINS:
-- 1. From the statistics table --> to the configurations table by id - To get host / vm configurations.
-- 2. From the statistics table --> to the configurations table by history_id (allias "latest") , when history_id is the maximum
-- this join is used to get the latest configurations of the host / vm.

SELECT DISTINCT
    /* If "Period" equals to "Daily" then */
    /* the "calendar_column" parameter is equal to "the_datetime" else "the_date" */
    $P!{calendar_column} as the_date,
    host_cpu_cores,
    host_mem_avg,
    vm_cpu_cores_total,
    vm_mem_total
FROM (
    SELECT
        t.history_datetime,
        host_cpu_cores,
        host_mem_avg,
        vm_cpu_cores_total,
        vm_mem_total
    FROM (
        /* This query section results hosts data - host_cpu_cores, host_mem_avg */
        SELECT
            history_datetime,
            SUM (
                coalesce ( v4_0_configuration_history_hosts.number_of_cores , 0 ) *
                minutes_in_status
            ) /
            SUM ( minutes_in_status )
            as host_cpu_cores,
            SUM (
                coalesce ( v4_0_configuration_history_hosts.memory_size_mb , 0 ) *
                minutes_in_status
            ) /
            SUM ( minutes_in_status )
            as host_mem_avg
        /* If "Period" equals to "Daily" then "table_name" parameter equals to "hourly" else "daily" */
        FROM v4_0_statistics_hosts_resources_usage_$P!{table_name}
            INNER JOIN v4_0_configuration_history_hosts
                ON (
                    v4_0_configuration_history_hosts.history_id =
                    v4_0_statistics_hosts_resources_usage_$P!{table_name}.host_configuration_version
                )
                    INNER JOIN v4_0_configuration_history_hosts latest
                        ON (
                            latest.host_id =
                            v4_0_statistics_hosts_resources_usage_$P!{table_name}.host_id
                        )
            WHERE v4_0_statistics_hosts_resources_usage_$P!{table_name}.host_status = 1
            AND v4_0_configuration_history_hosts.cluster_id in (
                SELECT v4_0_configuration_history_clusters.cluster_id
                FROM v4_0_configuration_history_clusters
                WHERE v4_0_configuration_history_clusters.datacenter_id =
                cast ( $P{P_DataCenter_ID} as uuid )
            )
            AND v4_0_configuration_history_hosts.cluster_id =
            CASE $P{P_Cluster_ID}
                WHEN '11111111-1111-1111-1111-111111111111'
                    THEN v4_0_configuration_history_hosts.cluster_id
                ELSE cast ( $P{P_Cluster_ID} as uuid )
            END
            AND history_datetime >= cast ( $P{P_Start_Date} as date )
            AND history_datetime <
                CASE
                    WHEN $P{P_Period} = 0
                        THEN cast ( $P{P_Start_Date} as TIMESTAMP ) + interval '1 day'
                    WHEN $P{P_Period} = 1
                        THEN cast ( $P{P_Start_Date} as TIMESTAMP ) + interval '1 month'
                    WHEN $P{P_Period} = 2
                        THEN cast ( $P{P_Start_Date} as TIMESTAMP ) + interval '3 month'
                    WHEN $P{P_Period} = 3
                        THEN cast ( $P{P_Start_Date} as TIMESTAMP ) + interval '1 year'
                END
            AND latest.history_id in (
                SELECT max ( b.history_id )
                FROM v4_0_configuration_history_hosts b
                GROUP BY b.host_id
            )
            AND
                CASE
                     WHEN $P{is_deleted} like 'AND%'
                         THEN latest.delete_date IS NULL
                    ELSE
                        latest.delete_date IS NULL
                        OR
                        latest.delete_date IS NOT NULL
                END
        GROUP BY history_datetime
    )
    as t
        INNER JOIN (
            /* This query section results vms data - vm_cpu_cores_total, vm_mem_total */
            SELECT
                nested_query.history_datetime,
                SUM ( nested_query.cpu_cores ) as vm_cpu_cores_total,
                SUM ( nested_query.mem_total ) as vm_mem_total
            FROM (
                SELECT
                    history_datetime,
                    v4_0_configuration_history_vms.vm_id,
                    SUM (
                        coalesce ( v4_0_configuration_history_vms.cpu_per_socket , 0 ) *
                        coalesce ( v4_0_configuration_history_vms.number_of_sockets , 0 ) *
                        minutes_in_status
                    ) /
                    SUM ( minutes_in_status )
                    as cpu_cores,
                    SUM (
                        coalesce ( v4_0_configuration_history_vms.memory_size_mb , 0 ) *
                        minutes_in_status
                    ) /
                    SUM ( minutes_in_status )
                    as mem_total
                FROM v4_0_statistics_vms_resources_usage_$P!{table_name}
                            INNER JOIN v4_0_configuration_history_vms
                                ON (
                                    v4_0_configuration_history_vms.history_id =
                                    v4_0_statistics_vms_resources_usage_$P!{table_name}.vm_configuration_version
                                )
                                INNER JOIN v4_0_configuration_history_vms latest
                                    ON (
                                        latest.vm_id =
                                        v4_0_statistics_vms_resources_usage_$P!{table_name}.vm_id
                                    )
                WHERE v4_0_statistics_vms_resources_usage_$P!{table_name}.vm_status = 1
                AND v4_0_configuration_history_vms.cluster_id in (
                    SELECT v4_0_configuration_history_clusters.cluster_id
                    FROM v4_0_configuration_history_clusters
                    WHERE v4_0_configuration_history_clusters.datacenter_id =
                    cast ( $P{P_DataCenter_ID} as uuid )
                )
                AND v4_0_configuration_history_vms.cluster_id =
                    CASE $P{P_Cluster_ID}
                        WHEN '11111111-1111-1111-1111-111111111111'
                            THEN v4_0_configuration_history_vms.cluster_id
                        ELSE cast ( $P{P_Cluster_ID} as uuid )
                    END
                AND history_datetime >= cast ( $P{P_Start_Date} as date )
                AND history_datetime <
                    CASE
                        WHEN $P{P_Period} = 0
                            THEN cast ( $P{P_Start_Date} as TIMESTAMP ) + interval '1 day'
                        WHEN $P{P_Period} = 1
                            THEN cast ( $P{P_Start_Date} as TIMESTAMP ) + interval '1 month'
                        WHEN $P{P_Period} = 2
                            THEN cast ( $P{P_Start_Date} as TIMESTAMP ) + interval '3 month'
                        WHEN $P{P_Period} = 3
                            THEN cast ( $P{P_Start_Date} as TIMESTAMP ) + interval '1 year'
                    END
                AND latest.history_id in (
                    SELECT max ( b.history_id )
                    FROM v4_0_configuration_history_vms b
                    GROUP BY b.vm_id
                )
                AND
                    CASE
                        WHEN $P{is_deleted} like 'AND%'
                            THEN latest.delete_date IS NULL
                        ELSE
                            latest.delete_date IS NULL
                            OR
                            latest.delete_date IS NOT NULL
                    END
                GROUP BY history_datetime, v4_0_configuration_history_vms.vm_id
            )
            as nested_query
            GROUP BY nested_query.history_datetime
        ) as h
            ON (
                h.history_datetime =
                t.history_datetime
            )
)
as query_run
    RIGHT OUTER JOIN calendar
        ON (
            query_run.history_datetime =
            calendar.$P!{calendar_column}
        )
WHERE $P!{calendar_column} >= cast ( $P{P_Start_Date} as date )
AND $P!{calendar_column} <
    CASE
        WHEN $P{P_Period} = 0
            THEN cast ( $P{P_Start_Date} as TIMESTAMP ) + interval '1 day'
        WHEN $P{P_Period} = 1
            THEN cast ( $P{P_Start_Date} as TIMESTAMP ) + interval '1 month'
        WHEN $P{P_Period} = 2
            THEN cast ( $P{P_Start_Date} as TIMESTAMP ) + interval '3 month'
        WHEN $P{P_Period} = 3
            THEN cast ( $P{P_Start_Date} as TIMESTAMP ) + interval '1 year'
    END
ORDER BY $P!{calendar_column}]]>
	</queryString>
