<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="top_five_clusters_host_uptime_dr15" language="groovy" pageWidth="418" pageHeight="167" whenNoDataType="AllSectionsNoDetail" columnWidth="418" leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0" resourceBundle="ovirt_reports_bundle" whenResourceMissingType="Error">
    <property name="ireport.zoom" value="1.0"/>
    <property name="ireport.x" value="0"/>
    <property name="ireport.y" value="0"/>
    <property name="ireport.jasperserver.reportUnit" value="/reports_resources/embedded_reports/webadmin_dashboards/dc_dashboard/top_five_clusters_host_uptime_dr15"/>
    <property name="ireport.jasperserver.url" value="http://localhost:8080/jasperserver/services/repository"/>
    <parameter name="P_DataCenter_ID" class="java.lang.String">
        <defaultValueExpression><![CDATA[]]></defaultValueExpression>
    </parameter>
    <queryString>
        <![CDATA[SELECT v4_0_latest_configuration_hosts.cluster_id, v4_0_latest_configuration_clusters.cluster_name,
       (SUM(CASE WHEN v4_0_statistics_hosts_resources_usage_samples.host_status = 1 THEN coalesce(v4_0_statistics_hosts_resources_usage_samples.minutes_in_status,0) ELSE 0 END) / SUM(v4_0_statistics_hosts_resources_usage_samples.minutes_in_status)) * 100 as uptime_percent,
       (SUM(CASE WHEN v4_0_statistics_hosts_resources_usage_samples.host_status = 2 THEN coalesce(v4_0_statistics_hosts_resources_usage_samples.minutes_in_status,0) ELSE 0 END) / SUM(v4_0_statistics_hosts_resources_usage_samples.minutes_in_status)) * 100 AS planned_downtime_percent
FROM v4_0_statistics_hosts_resources_usage_samples
     INNER JOIN v4_0_latest_configuration_hosts ON (v4_0_latest_configuration_hosts.host_id = v4_0_statistics_hosts_resources_usage_samples.host_id)
         INNER JOIN v4_0_latest_configuration_clusters ON (v4_0_latest_configuration_hosts.cluster_id = v4_0_latest_configuration_clusters.cluster_id)
WHERE v4_0_latest_configuration_clusters.datacenter_id = cast($P{P_DataCenter_ID} as UUID)
GROUP BY v4_0_latest_configuration_hosts.cluster_id, v4_0_latest_configuration_clusters.cluster_name
ORDER BY uptime_percent DESC
LIMIT 5]]>
    </queryString>
