	<queryString language="SQL">
		<![CDATA[-- DR14 - This query returns the
-- average number of CPU Cores and Physical Memory
-- for the hosts and vms in the specific cluster.

-- Hosts CPU Cores Total and Hosts Physical Memory Total
SELECT
    'avg_host' AS entity,
    SUM (
        COALESCE (
            v4_0_configuration_history_hosts.number_of_cores,
            0
        ) *
        minutes_in_status
    ) /
    SUM (
        minutes_in_status
    )
    AS cpu_cores,
    SUM (
        COALESCE (
            v4_0_configuration_history_hosts.memory_size_mb,
            0
        ) *
        minutes_in_status
    ) /
    SUM (
        minutes_in_status
    ) AS mem_avg
FROM v4_0_statistics_hosts_resources_usage_samples
    INNER JOIN v4_0_configuration_history_hosts
        ON (
            v4_0_configuration_history_hosts.history_id =
            v4_0_statistics_hosts_resources_usage_samples.host_configuration_version
        )
    INNER JOIN v4_0_latest_configuration_hosts AS a
        ON (
            a.host_id =
            v4_0_statistics_hosts_resources_usage_samples.host_id
        )
WHERE
    -- Here we get only active hosts
    v4_0_statistics_hosts_resources_usage_samples.host_status = 1
    -- Here we filter by the cluster chosen by the user
    AND a.cluster_id = CAST ( $P{P_Cluster_ID} AS UUID )

UNION ALL

-- vms CPU Cores Total and vms Physical Memory Total
SELECT
    'total_avg_vms' AS entity,
    SUM (
        nested_query.cpu_cores
    ) AS cpu_cores_total,
    SUM (
        nested_query.mem_avg
    ) AS mem_avg_total
FROM (
    SELECT
        a.vm_id,
        SUM (
            COALESCE (
                v4_0_configuration_history_vms.cpu_per_socket,
                0
            ) *
            COALESCE (
                v4_0_configuration_history_vms.number_of_sockets,
                0
            ) *
            minutes_in_status
        ) /
        SUM ( minutes_in_status ) AS cpu_cores,
        SUM (
            COALESCE (
                v4_0_configuration_history_vms.memory_size_mb,
                0
            ) *
            minutes_in_status
        ) /
        SUM (
            minutes_in_status
        ) AS mem_avg
    FROM v4_0_statistics_vms_resources_usage_samples
        INNER JOIN v4_0_configuration_history_vms
            ON (
                v4_0_configuration_history_vms.history_id =
                v4_0_statistics_vms_resources_usage_samples.vm_configuration_version
            )
        INNER JOIN v4_0_latest_configuration_vms AS a
            ON (
                a.vm_id =
                v4_0_statistics_vms_resources_usage_samples.vm_id
            )
    WHERE
        -- Here we get only active vms
        v4_0_statistics_vms_resources_usage_samples.vm_status = 1
        -- Here we filter by the cluster chosen by the user
        AND a.cluster_id = CAST ( $P{P_Cluster_ID} AS uuid )
       GROUP BY a.vm_id
) AS nested_query]]>
	</queryString>
