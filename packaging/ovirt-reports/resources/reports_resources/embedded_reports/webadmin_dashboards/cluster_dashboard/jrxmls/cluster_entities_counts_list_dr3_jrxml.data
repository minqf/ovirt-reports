	<parameter name="P_Cluster_ID" class="java.lang.String"/>
	<queryString language="SQL">
		<![CDATA[-- DR3 - This query returns the
-- number of hosts and the number of vms
-- in the latest cluster configuration

SELECT
    COUNT (
        DISTINCT v4_0_latest_configuration_hosts.host_id
    ) AS host_count,
    COUNT (
        DISTINCT v4_0_latest_configuration_vms.vm_id
    ) AS vm_count
FROM v4_0_latest_configuration_hosts
    INNER JOIN v4_0_latest_configuration_vms
        ON (
            v4_0_latest_configuration_hosts.cluster_id =
            v4_0_latest_configuration_vms.cluster_id
        )
WHERE
    --Here we filter by the cluster chosen by the user
    v4_0_latest_configuration_hosts.cluster_id = CAST( $P{P_Cluster_ID} as UUID )]]>
	</queryString>
